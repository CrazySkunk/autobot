<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.landing.frags.MechanicsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mechanics_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/mech_item" />

    <ImageView
        android:id="@+id/no_mechs_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/empty_tray"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mechanics_recycler"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mechanics_recycler"
        app:layout_constraintVertical_bias="0.418" />

    <TextView
        android:id="@+id/no_mechs_yet_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No mechanics yet"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/no_mechs_iv"
        app:layout_constraintStart_toStartOf="@+id/no_mechs_iv"
        app:layout_constraintTop_toBottomOf="@+id/no_mechs_iv"
        app:layout_constraintVertical_bias="0.094" />

</androidx.constraintlayout.widget.ConstraintLayout>