<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    android:elevation="20dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/schedule_image_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/account_circle"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/account_circle" />

        <TextView
            android:id="@+id/schedule_name_tv"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/antic"
            android:layout_height="wrap_content"
            android:text="Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/schedule_image_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/schedule_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:fontFamily="@font/antic"
            app:layout_constraintStart_toStartOf="@+id/schedule_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/schedule_name_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>